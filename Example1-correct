from math import tan, pi
import time
import functools


def timef(func):
    def need_time(*args, **kwargs):
        start = time.perf_counter()
        res = func(*args, **kwargs)
        time_e = time.perf_counter() - start
        print(f"Функция: {func.__name__}, Затраченное время: {time_e}\n")
        return res

    return need_time


@timef
def areaOfPolygon(length, number):
    number = int(number)
    area = (number * length ** 2) / (4 * tan(pi / number))
    print("Площадь правильного многоугольника %.2f " % area)


@timef
def sumOfTheFirst(n):
    sum_num = (n * (n + 1)) / 2
    print("Сумма первых", n, "положительных чисел:", sum_num)
